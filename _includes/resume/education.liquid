<ul class="card-text font-weight-light list-group list-group-flush">
  {% assign education = data[1] | sort: 'startDate' | reverse %}
  {% for content in education %}
    <li class="list-group-item">
      <div class="d-flex justify-content-between align-items-start flex-wrap mb-2">
        <div>
          <h6 class="title font-weight-bold mb-0">
            <a href="{{ content.url }}">{{ content.studyType }}</a>
          </h6>
          <h6 class="mb-0" style="font-size:0.95rem;">{{ content.institution }}</h6>
          <h6 class="mb-0" style="font-size:0.95rem; font-style: italic;">{{ content.area }}</h6>
          {% if content.courses %}
            <ul class="items mt-1">
              {% for item in content.courses %}
                <li><span class="item">{{ item }}</span></li>
              {% endfor %}
            </ul>
          {% endif %}
        </div>
        <div class="text-right flex-shrink-0" style="min-width: 90px;">
          {% if content.startDate %}
            {% assign startDate = content.startDate | split: '-' | slice: 0,2 | join: '.' %}
            {% assign endDate = content.endDate | split: '-' | slice: 0,2 | join: '.' | default: 'Present' %}
            <span class="badge font-weight-bold danger-color-dark text-uppercase">{{ startDate }} - {{ endDate }}</span>
          {% endif %}
          {% if content.location %}
            <p class="location mb-0 mt-1">
              <i class="fa-solid fa-location-dot iconlocation"></i>
              {{ content.location }}
            </p>
          {% endif %}
        </div>
      </div>
    </li>
  {% endfor %}
</ul>
